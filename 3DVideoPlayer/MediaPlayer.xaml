<UserControl x:Class="WPF_MediaPlayer.Controls.MediaPlayer"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MediaPlayer.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="1920" d:DesignHeight="1080" 
             PreviewKeyDown="UserControl_PreviewKeyDown" 
    xmlns:System="clr-namespace:System;assembly=System.Runtime" >

    <UserControl.Resources>
        <Storyboard x:Key="TimelineStory" Name="TimelineStory" SlipBehavior="Slip">
            <MediaTimeline Name="Timeline"
                           Storyboard.TargetName="Media"
                           CurrentTimeInvalidated="MediaTimeline_CurrentTimeInvalidated"/>
        </Storyboard>
        <System:Double x:Key="MediaElementWidth1">NaN</System:Double>
    </UserControl.Resources>

    <Grid>

        <MediaElement Name="Media"
                      ScrubbingEnabled="True"
                      Loaded="Media_Loaded"
                      MediaOpened="Media_MediaOpened"
                      MediaEnded="Media_MediaEnded"
                      PreviewMouseLeftButtonDown="Media_PreviewMouseLeftButtonDown"
                      Source="{Binding Source, ElementName=root}" HorizontalAlignment="Center" VerticalAlignment="Center" SizeChanged="Media_SizeChanged"
                      LoadedBehavior="Manual" UnloadedBehavior="Manual"/>

        <Slider Name="SeekSlider" Margin="54,473,-44,-47"
        PreviewMouseLeftButtonDown="SeekSlider_PreviewMouseLeftButtonDown" 
        PreviewMouseLeftButtonUp="SeekSlider_PreviewMouseLeftButtonUp"
        ValueChanged="SeekSlider_ValueChanged" Visibility="Hidden" />

        <StackPanel Orientation="Horizontal" Margin="0,290,0,-290" Visibility="Hidden">
            <Button Name="PlayButton" Content="Play" Margin="5" Click="PlayButton_Click" Focusable="False" Height="22"/>
            <Button Name="PauseButton" Content="Pause" Margin="5" Click="PauseButton_Click" Focusable="False" Height="22"/>
            <Button Name="StopButton" Content="Stop" Margin="5" Click="StopButton_Click" Focusable="False" Height="22"/>
            <Slider Name="VolumeSlider" Width="100" Maximum="1" Margin="5" Value="{Binding ElementName=Media, Path=Volume}" Height="20"/>
        </StackPanel>

    </Grid>
</UserControl>